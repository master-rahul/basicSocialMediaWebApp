<link rel="stylesheet" href="/css/profile.css">
<img src="<%=profileData.avatar%>" alt="<%=profileData.name%>" width="100" height="100">
<h1> Hi This is Profile Page</h1>    
<%if(locals.id == locals.profileData.id || locals.userId == locals.profileData.id){%>
       
    <form action="/user/update/<%=profileData.id%>" method="POST" enctype="multipart/form-data">   <!-- multipart/form-data is used for sending files. -->
        <label>Update Your Information : </label>
        <br>
        <input type="text" name="name" placeholder="Enter Your Name" value="<%=profileData.name%>" required>
        <input type="email" name="email" placeholder="Enter Your Email" value="<%=profileData.email%>" required>
        <input type="file" name="avatar" placeholder="Choose Your Profile Picture">
        <button type="submit">Submit</button>
    </form>
<%}else{%>
    <ul>
        <li><%=locals.profileData.name%></li>
        <li><%=locals.profileData.email%></li>
    </ul>
<%}%>
