    <div id="post-list-container">
        <ul>        
            <h4>All Posts : </h4>
            <%for(post of posts){%>
                <li>
                    <%=post.content%>
                    <i>
                        , By : <%=post.user.name%>
                        , UpdatedAt <%=post.updatedAt%>
                    </i>
                </li>
