                                <div style="display: flex;">
                                    <div class="username">
                                        <a href="/user/profile/<%=u.id%>">
                                            <%=u.name%>
                                        </a>
                                    </div>
                                    <%if(locals.name){%>
                                        <div class="username-button">
                                            <button class="friend-request-button" data-to="<%=u.id%>" onclick="sendFriendRequest(this)">Add Friend</button>
                                        </div>
                                    <%}%>
                                </div>
                            </li>
                        <%}%>
                </ul>
            </div>
