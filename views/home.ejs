                    <%for(u of friends){%>
                        <li>
                            <div class="username">
                                <a href="/user/profile/<%=u.id%>">
                                    <%=u.name%>
                                </a>
                            </div>
                        </li>
                    <%}%> 
            </ul>

        <%}%>
        <%if(allUsers.length > 0){%>
            <h3>Users</h3>
            <div id="users">
                <ul id="user-list-container">
                        <%for(u of allUsers){%>
                            <%if(u.id==locals.userId) continue; %>
